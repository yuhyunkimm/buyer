<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.byer.model.ProductRepository">
   <select id="findAll" resultType="shop.mtcoding.byer.model.Product">
      select * from Product_tb
   </select>
   
   <select id="findById" resultType="shop.mtcoding.byer.model.Product">
      select * from Product_tb
   </select>

   <insert id="insert">
      insert into Product_tb(name, price, qty, created_at) values(#{name}, #{price}, #{qty}, now())
   </insert>

   <delete id="deleteById">
      delete from Product_tb where id = #{id}
   </delete>

   <update id ="updateById">
      update Product_tb set name = #{name}, price = #{price}, qty = #{qty} where id = #{id}
   </update>
</mapper>